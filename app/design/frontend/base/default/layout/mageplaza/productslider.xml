<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addCss">
                <js>css/mageplaza/productslider/style.css</js>
            </action>
        </reference>
        <reference name="footer" >
            <block type="core/template" name="mp-copyright" template="mageplaza/productslider/productslider/copyright.phtml" />
        </reference>
    </default>
    <productslider_index_index>
        <reference name="content">
            <block type="productslider/productslider" name="productslider" template="mageplaza/productslider/productslider.phtml" />
        </reference>
    </productslider_index_index>
</layout>